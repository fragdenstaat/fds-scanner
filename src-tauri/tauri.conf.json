{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "FDS Scanner",
  "version": "0.1.12",
  "identifier": "de.fragdenstaat.scanner",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "FDS Scanner",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/example.pdf"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        {
          "host": "fragdenstaat.de",
          "pathPrefix": [
            "/app/scanner/deep/"
          ]
        },
        {
          "host": "app.fragdenstaat.de",
          "pathPrefix": [
            "/app/scanner/deep/"
          ]
        }
      ]
    }
  }
}